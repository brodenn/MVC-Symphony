{% extends 'base.html.twig' %}

{% block title %}Card Game{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Card Game</h1>
    <p>Welcome to the card game. Choose your action:</p>
    <div class="list-group">
        <a href="{{ path('card_deck') }}" class="list-group-item list-group-item-action">View Deck</a>
        <a href="{{ path('card_deck_shuffle') }}" class="list-group-item list-group-item-action">Shuffle Deck</a>
        <a href="{{ path('card_deck_draw', {'number': 1}) }}" class="list-group-item list-group-item-action">Draw One Card</a>
        <a href="{{ path('card_deck_draw', {'number': 5}) }}" class="list-group-item list-group-item-action">Draw Five Cards</a>
        <a href="{{ path('card_deck_deal', {'players': 2, 'cards': 5}) }}" class="list-group-item list-group-item-action">Deal Cards to Players</a>
    </div>
    <div class="mt-4">
        <h2>Class Diagram</h2>
        <img src="{{ asset('img/class-diagram.jpg') }}" alt="Class Diagram" class="img-fluid">
    </div>
</div>
{% endblock %}
